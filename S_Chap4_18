#include "..\std_lib_facilities.h"

/* What about a = 0?  if b*b - 4*a*c is negative? */

int main()
{
	double a = 0.0, b = 0.0, c = 0.0;
	double x1 = 0.0, x2 = 0.0;

	cout << "Please enter a, b and c: ";
	cin >> a >> b >> c;

	x1 = (-b + sqrt(b * b - 4 * a * c)) / (2 * a);
	x2 = (-b - sqrt(b * b - 4 * a * c)) / (2 * a);

	cout << "x = " << x1 << " or x = " << x2;
}
